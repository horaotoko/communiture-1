              %li
                = link_to '募集', '/offer'
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
      #wrapper
        = yield
    %footer.footer
      .container.row
        .support.span3
          %h3 サポート
          %ul
            %li= link_to '応募までの流れ', '/help/how_to_register' 
            %li= link_to 'よくある質問', '/faq' 
            %li= link_to '募集のまでの流れ', '/help/how_to_offer' 
            %li= link_to '料金体系', '/pricing' 
        .about_communiture.span3
          %h3 Communitureについて
          %ul
